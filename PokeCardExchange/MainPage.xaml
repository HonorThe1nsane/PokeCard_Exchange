<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PokeCardExchange.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image Placeholder -->
            <Image
                Source="pokecardicon.png"
                Aspect="Fill"
                HeightRequest="500"
                WidthRequest="450"
                HorizontalOptions="Center" />
            <Label
                Text="Welcome to PokéCard Exchange!"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center" />

            <Label
                Text="Trade Pokémon cards with ease. Tap below to start searching for cards."
                FontSize="16"
                HorizontalTextAlignment="Center" 
                Padding="0,10,0,20"/>

            <Button
                x:Name="StartSearchBtn"
                Text="Start Trading"
                FontSize="18"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="StartSearchBtn_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
